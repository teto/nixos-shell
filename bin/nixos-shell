#!/usr/bin/env bash

set -euo pipefail

script_dir="$(dirname "$(readlink -f "$0")")"

nixos_config=vm.nix
while [[ $# -gt 0 ]]; do
  case "$1" in
  --)
    shift
    break
    ;;
  *)
    nixos_config="$1"
    shift
    ;;
  esac
done

export QEMU_NIXOS_CONFIG="$(readlink -f "$nixos_config")"

tempdir=$(mktemp -d)
cleanup() {
  rm -rf "$tempdir"
}
# trap cleanup EXIT SIGINT SIGQUIT ERR

# Original code
# nix-build '<nixpkgs/nixos>' -A vm -k \
#   -I "nixos-config=${script_dir}/../share/nixos-shell/nixos-shell.nix" \
#   -o "${tempdir}/result" "$@"


echo "Exporting QEMU_NIXOS_CONFIG=$QEMU_NIXOS_CONFIG"

# need my fork that makes nixosTesting globally available
# nix-build -A nixosTesting.testDriver  '<nixpkgs>' -o "${tempdir}/test-driver"
nix-build -A testMatt "${script_dir}/../share/nixos-shell/driver.nix"  -o "${tempdir}/result" "$@"


echo "${tempdir}/result/bin/nixos-run-vms"
